{
	"compilerOptions": {
		"target": "ES2020",
		"rootDir": ".",
		"module": "ESNext",
		"moduleResolution": "node",
		"strict": true,
		"declaration": true,
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true
	},
	"include": ["**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
